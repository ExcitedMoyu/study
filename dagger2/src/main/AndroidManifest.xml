<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smasher.dagger">


    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.smasher.dagger.DaggerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.smasher.dagger.activity.AlarmActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.smasher.dagger.activity.DaggerActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <receiver android:name="com.smasher.dagger.receiver.AlarmReceiver">
            <intent-filter>
                <action android:name="com.smasher.study.AlarmEvent" />
            </intent-filter>
        </receiver>
    </application>

</manifest>