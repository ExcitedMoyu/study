<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smasher.aidl">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity
            android:name=".activity.local.ScrollingActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".activity.remote.ui.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:process=":remote">

        </activity>

        <service
            android:name=".service.remote.RemoteService"
            android:enabled="true"
            android:exported="true"
            android:process=":remote">

        </service>


        <service
            android:name=".service.local.LocalService"
            android:enabled="true"
            android:exported="true">

        </service>
    </application>

</manifest>